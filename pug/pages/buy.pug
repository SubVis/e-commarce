<!DOCTYPE html>
html(lang="ar", dir="rtl")
    include ../utils/head
    +head('عاملة كام | الرئيسية')
    body.overflow-hidden
        include ../components/navbar
        +nav(['','active','','',''])
        
        //- quick search
        .container.px-2.mx-auto
            .quick-search
                p.header البحث السريع
                .-mx-2
                    .inputs.flex.px-2.flex-wrap
                        include ../utils/Selcetion
                        .px-2(class="w-full sm:w-1/2 md:w-1/5")
                            //- labelClasses,label,selectName,options,hint
                            +selectWithOutClassese('','الماركة:','brand', ['--اختر--','شيء','شيء','شيء','شيء'])
                        .px-2(class="w-full mt-2 sm:w-1/2 md:w-1/5")
                            //- labelClasses,label,selectName,options,hint
                            +selectWithOutClassese('','الموديل:','model', ['--اختر--','شيء','شيء','شيء','شيء'])
                        .px-2(class="w-full mt-2 sm:w-1/2 md:w-1/5")
                            //- labelClasses,label,selectName,options,hint
                            +selectWithOutClassese('','المحافظة:','لovernorate', ['--اختر--','شيء','شيء','شيء','شيء'])
                        .px-2(class="w-full mt-2 sm:w-1/2 md:w-1/5")
                            //- labelClasses,label,selectName,options,hint
                            +selectWithOutClassese('','نوع الهيكل:','outfitType', ['--اختر--','شيء','شيء','شيء','شيء'])
                        .px-2(class="w-full mt-2 sm:w-1/2 md:w-1/5")
                            //- labelClasses,label,selectName,options,hint
                            +selectWithOutClassese('','نوع الناقل:','transmissionType', ['--اختر--','شيء','شيء','شيء','شيء'])
                        .px-2.flex.justify-between(class="w-full mt-2 sm:w-1/2 md:w-2/5")
                            //- labelClasses,label,selectName,options,hint
                            .px-2(class="w-full")
                                label.my-2.font-bold.title السعر:
                                .flex
                                    select#slim-select.js-choice(dir="rtl" name='salaryFrom')
                                        optgroup
                                            option(value=1) من
                                            option(value=2) شيء
                                            option(value=3) شيء
                                    select#slim-select.js-choice(dir="rtl" name='salaryTo')
                                        optgroup
                                            option(value=1) إلى
                                            option(value=2) شيء
                                            option(value=3) شيء
                        .px-2.flex.justify-between(class="w-full mt-2 sm:w-1/2 md:w-2/5")
                            //- labelClasses,label,selectName,options,hint
                            .px-2(class="w-full")
                                label.my-2.font-bold.title سنة الصنع:
                                .flex.flex-justify-between
                                    select#slim-select.js-choice(dir="rtl" name='salaryFrom')
                                        optgroup
                                            option(value=1) من
                                            option(value=2) شيء
                                            option(value=3) شيء
                                    select#slim-select.js-choice(dir="rtl" name='salaryTo')
                                        optgroup
                                            option(value=1) إلى
                                            option(value=2) شيء
                                            option(value=3) شيء

                        .px-2.mt-4.flex.justify-center.items-end.flex-grow
                            button.indigo.px-32 بحث               
      
        //- Row 2 
        .container.mx-auto.px-2.mt-8
            .flex.flex-wrap
                .brand(class="w-full sm:w-full lg:w-1/2")
                    p.header الماركات المتواجدة
                    
                    .-mx-2
                        .flex.px-2.flex-wrap
                            - for(let i = 1; i <= 3; ++i){
                                .img.px-2(class="w-1/3")
                                    img(src="./images/brands/"+i+ '.png', width=100 ,alt="brand")
                            - }
                            - for(let i =4 ; i <= 6; ++i){
                                .img.px-2(class="w-1/3")
                                    img(src="./images/brands/"+i+ '.png', width=100 ,alt="brand")
                            - }
                            - for(let i = 7; i <= 9; ++i){
                                .img.px-2(class="w-1/3")
                                    img(src="./images/brands/"+i+ '.png', width=100 ,alt="brand")
                            - }
                        .px-2.mt-4.flex.justify-center.items-end
                            button.indigo المزيد  
                .carousel(class="w-full sm:w-full lg:w-1/2")
                    p.header الأكثر مشاهدة

                    .flex.flex-wrap.justify-center
                        div(class="w-full md:w-4/6")
                            .siema
                                include ../components/MiniCard
                                include ../components/MiniCard
                                include ../components/MiniCard

        
        //- Row 3
        .container.mx-auto.px-2.mt-8
            p.header أحدث الإعلانات
            .flex.flex-wrap.px-2
                each val in ['السعر', 'المدينة' , 'الماركة' ,'الموديل' , 'المسافة' , 'المحرك' , 'الناقل', 'اللون']
                    .px-2.my-2.flex-grow
                        select#slim-select.js-choice(dir="rtl" name='salaryTo')
                            optgroup
                                option(value=1)=val
                                option(value=2) شيء
                                option(value=3) شيء
                .px-2.my-2
                    button.indigo.flex-grow بحث

        .flex.flex-wrap.px-2
            - for(let i = 0; i < 9; i++){
                .px-2(class="w-full sm:w-1/2 md:w-1/3")
                    include ../components/Card
            -}
        .flex.justify-center.my-6.pagenation
            ul.flex.border.border-grey
                li
                    a.block.px-3.py-2.color(class='hover:text-black ' href='#') السابق
                li
                    a.block.border-r.border-grey-light.px-3.py-2.color(class=' active hover:text-black' href='#') 1
                li
                    a.block.border-r.border-grey-light.px-3.py-2.color(class='hover:text-black' href='#') 2
                li
                    a.block.text-white.bg-blue.px-3.py-2.color.border-r.border-grey-light(class='hover:text-black' href='#') 3
                li
                    a.block.px-3.py-2.color.border-r.border-grey(class='hover:text-black' href='#') التالي

        //- .shape.flex.justify-center
        //-     .all
        //-         p.my-2 عايز تبيع؟
        //-         a.btn.my-2.yellow(href="sell.html")  اعلن عن عربيتك 
    include ../components/footer
    script(src="./js/libs/siema.min.js")
    script. 
        const mySiema = new Siema({
            selector: '.siema',
            easing: 'ease-out',
            perPage: 1,
            startIndex: -1,
            loop: true,
            rtl: true,
        });
        setInterval(() => mySiema.next(), 2000);
    script(src="./js/libs/move.js")
    script(src="./js/main.js")  