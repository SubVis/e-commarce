mixin textInput(label, placeholder)
    .input.px-2.my-2(class="w-full md:w-1/2 lg:w-1/3 ")
        p.my-2.font-bold.title(class="m-2")=label
        .x.flex-grow
            input(type="text", placeholder=placeholder)
            p.help-block.help هذا الحقل مطلوب.
            
mixin select(label,selectName, selectPlaveholder,options)
    div(class="w-full  md:w-1/2 lg:w-1/3  my-2 px-2")
        label(for=selectName class="my-2 inline-block font-bold title pl-2")=label
        select(data-placeholder=selectPlaveholder ,  class="chosen-select" , name=selectName, id=selectName)&attributes(attributes)
            - for (let i= 0; i< options.length; ++i){
                option(value=options[i][0])=options[i][1]
            -   }
        p.help-block.help  هذا الحقل مطلوب.